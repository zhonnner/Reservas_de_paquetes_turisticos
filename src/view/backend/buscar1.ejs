<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- bootswatch -->
    <link rel="stylesheet" href="https://bootswatch.com/4/lux/bootstrap.min.css">
    <title>programacionweb</title>
    <style>
        .table{
        outline-style: solid;
        outline-width: 2px;}
    </style>
</head>
<body>
    <nav class="navbar sticky-top navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/">Home</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item dropdown active">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Ingresar Datos
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="/ingresar">ingresar paquetes</a>
                        <a class="dropdown-item" href="/ingresar1">ingresar viajes</a>
                        <a class="dropdown-item" href="/ingresar2">ingresar estadia</a>
                    </div>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/busquedas">Buscar</a>
                </li>
            </ul>
            <span class="navbar-text">
                <h4 style="color: white">Administracion</h4>
            </span>
        </div>
    </nav>
    <div class="container mt-5">
        <div class="row">
            <div class="col-sm">
                <h3>Compras</h3>
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Id_compra</th>
                            <th scope="col">Estado</th>
                            <th scope="col">Fecha_compra</th>
                            <th scope="col">Hora_compra</th>
                        </tr>
                    </thead>
                    <tbody>           
                        <% if (compra) { %>
                            <% for(var i= 0; i < compra.length; i++) { %>     
                                <% if (i == 0) { %>     
                                <tr class="table-info">
                                    <th><%= compra[0].Id_compra%></th>
                                    <td><%= compra[0].Estado%></td>
                                    <td><%= compra[0].Fecha_compra%></td>
                                    <td><%= compra[0].Hora_compra%></td>
                                </tr>
                                <% } %>
                            <% } %>
                        <% } %>
                        
                    </tbody>
                </table>        
            </div>
        </div>
        <div class="row">
            <div class="col-md-5">
                <h3>Paquete y Cliente</h3>
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">NÂ° Paquete</th>
                            <th scope="col">Cliente</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (paquete) { %>
                            <% for(var i= 0; i < paquete.length; i++) { %>
                                <tr>
                                    <td> 
                                        <%= paquete[i].Id_paquete %>
                                    </td>
                                    <td>
                                        <%= compra[0].Rut %>
                                    </td>
                                </tr>
                                <% } %>
                                    <% } %>
                    </tbody>
                </table>        
            </div>
            <div class="col-md-7">
                <h3>Viajes</h3>
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Fecha</th>
                            <th scope="col">Hora</th>
                            <th scope="col">Origen</th>
                            <th scope="col">Destino</th>
                        </tr>
                    </thead>
                    <tbody>           
                        <% if (compra) { %>
                            <% for(var i= 0; i < compra.length; i++) { %>
                                <tr>
                                    <td> 
                                        <%= compra[i].Id_viaje %>
                                    </td>
                                    <td>
                                        <%= compra[i].Fecha_viaje %>
                                    </td>
                                    <td>
                                        <%= compra[i].Hora_viaje %>
                                    </td>
                                    <td>
                                        <%= compra[i].Origen %>
                                    </td>
                                    <td>
                                        <%= compra[i].Destino %>
                                    </td>
                                </tr>
                                <% } %>
                                    <% } %>
                    </tbody>
                </table>        
            </div>
        </div>
        <div class="row">
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <td class="text-center"><a href="/busquedas" class="btn btn-success">Volver a busquedas</a></td>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
        <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>   
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>

</body>
</html>